<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="First App" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="63*"/>
            <ColumnDefinition Width="454*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="450" Background="#CCCCCC" Opacity="0.845" BorderThickness="0" SnapsToDevicePixels="True" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"/>
        <Button Content="Gonder" HorizontalAlignment="Left" Margin="322,104,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" FontFamily="Agency FB" Click="sendClick"/>
        <TextBox x:Name="txtSomeText" Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="22" Margin="10,54,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="txtSomeText_TextChanged"/>

    </Grid>
</Window>
